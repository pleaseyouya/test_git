<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.qihoo.cube" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".util.data.ApplicationManager"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ZoneActivity" />

        <activity android:name=".activity.EditPhotoActivity" />

        <activity android:name=".activity.ViewPhotoActivity" />

        <activity android:name=".activity.AddGalleryActivity" />

        <activity android:name=".activity.GalleryActivity" />

        <activity android:name=".activity.SelectphotoActivity" />

        <activity android:name=".activity.SelectphotoActivityGrid" />

        <activity android:name=".activity.EditGalleryActivity" />

        <activity android:name=".activity.HelpActivity" />
    </application>

</manifest>
