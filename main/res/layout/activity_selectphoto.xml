<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:background="@color/custom_blue_deep"
        android:id="@+id/activity_selectphoto_top">

        <ImageView
            android:id="@+id/activity_selectphoto_finish"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/back_arrow_selector"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="#00000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_selectphoto_title"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/activity_selectphoto_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/activity_selectphoto_top"/>

</RelativeLayout>