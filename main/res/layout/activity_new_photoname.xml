<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:background="@color/custom_blue_deep"
        android:id="@+id/activity_new_photoname_top">

        <ImageView
            android:id="@+id/activity_new_photoname_finish"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/back_arrow_selector"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="#00000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_new_photoname_title"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_centerInParent="true"/>
        
        <ImageButton
            android:id="@+id/activity_new_photoname_ok"
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:src="@drawable/ok_button_selector"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/activity_new_photoname_edit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/activity_new_photoname_top"
        android:layout_marginTop="40dp"
        android:background="@mipmap/new_photoname_editbg"
        android:hint="@string/activity_new_photoname_edit_hint"
        android:textColorHint="@color/custom_grey"/>
    
</RelativeLayout>