<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="52dp"
    android:id="@+id/dedededed"
    android:focusable="false">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/activity_edit_item_photo"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:id="@+id/activity_edit_item_photo"
        android:focusable="false"/>

    <TextView
        android:id="@+id/activity_edit_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的相册"
        android:layout_toRightOf="@id/activity_edit_item_photo"
        android:textSize="@dimen/medium_15_text"
        android:textColor="@color/custom_black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:focusable="false"/>

    <ImageView
        android:id="@+id/activity_edit_item_checkbox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/edit_item_notcheck"
        android:background="#00000000"
        android:layout_marginRight="30dp"
        android:focusable="false"/>
    
</RelativeLayout>