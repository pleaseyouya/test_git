<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="82dp">

    <ImageView
        android:id="@+id/selectphoto_item_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:background="#0000ff"/>

    <TextView
        android:id="@+id/selectphoto_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/selectphoto_item_photo"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:text="最近添加（3张）"
        android:textSize="@dimen/medium_15_text"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@mipmap/selectphoto_list_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:layout_marginRight="20dp"/>

</RelativeLayout>